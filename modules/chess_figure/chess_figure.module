function chess_figure_on_board($id){
  $chess_figure = chess_figure_load($id)[$id];


  $values = array(
    'cell' => ('' . $chess_figure->cell_x . $chess_figure->cell_y),
    'color' => $chess_figure -> color,
    'type' => $chess_figure -> type,
  );
  return theme('chess-figure',$values);
}


